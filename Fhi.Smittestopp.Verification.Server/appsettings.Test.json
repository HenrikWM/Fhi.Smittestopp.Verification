{
  "clients": [
    {
      // merge with default client
    },
    {
      "clientId": "test-spa-client",
      "requireClientSecret": false,
      "requirePkce": true,
      "allowedGrantTypes": [
        "authorization_code"
      ],
      "allowedScopes": [
        "openid",
        "verification-info",
        "upload-api",
        "smittestop"
      ],
      "redirectUris": [
        "http://localhost:4200/"
      ],
      "corsOrigins": [
        "http://localhost:4200"
      ]
    }
  ],
  "signingCredentials": {
    "certificate": "signing-cert",
    "rolloverDuration": "1.00:00:00.0"
  },
  "certificates": {
    "locator": "azure",
    "azureVault": {
      "vaultUri": "vault-uri-from-deployment"
    }
  },
  "common": {
    "verificationLimit": {
      "MaxVerificationsAllowed": 1000
    }
  }
}
